
<h3>New Student Form</h3>

<% form_tag new_student_path do %>

  <label>New Student First Name:</label>
  <%= text_field_tag :'student[first_name]' %>

  <label>New Student Last Name:</label>
  <%= text_field_tag :'student[last_name]' %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag "Submit Student" %>

<% end %>
